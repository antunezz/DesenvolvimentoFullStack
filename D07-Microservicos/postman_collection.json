		{
			"name": "Listar os itens do carrinho",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"var carrinho = {usuario: \"usuarioLogado\", itens: []};",
							"jsonData.itens.forEach((item) => {",
							"    carrinho.itens.push({",
							"        produto: item.produto.id,",
							"        quantidade: item.quantidade",
							"    });",
							"});",
							"pm.globals.set(\"carrinho\", JSON.stringify(carrinho));"
						],
						"type": "text/javascript"
					}
				}
